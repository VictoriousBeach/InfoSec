  <div id="chat-view">
    <div class="card text-left w-75 chatbot-res">
      <div class="row no-gutters">
        <div class="col-md-3">
          <img src="https://cdn.clipart.email/3c8e20cd2c9d95810a5286da385599f9_alex-clauss-on-twitter-day-13-bullseye-the-target-dog-one-of-_800-800.jpeg" class="card-img" alt="Target Dog">
        </div>
        <div class="col-md-9">
          <div class="card-body">
            <p class="card-text">Hey my name is Bullseye! Let me know if you have any questions</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <form class="chat-submit">
    <textarea placeholder="Type a message.." id = "msg"></textarea>
    <button type="button" class="btn btn-secondary btn-lg btn-block" id ="send-btn" onclick="generateResponse()">Send</button>
  </form>
</div>